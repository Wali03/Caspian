{
  "name": "caspian-restaurant",
  "version": "1.0.0",
  "description": "CASPIAN Restaurant Spinning Wheel Web Application",
  "scripts": {
    "install-all": "npm run install-backend && npm run install-frontend",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\"",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm start",
    "start": "npm run dev",
    "build": "cd frontend && npm run build",
    "test": "echo \"Run tests from individual packages\"",
    "setup": "npm run install-all && echo \"Setup complete! Run 'npm run dev' to start the application.\""
  },
  "keywords": [
    "restaurant",
    "spinning-wheel",
    "coupons",
    "mern-stack",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "CASPIAN Restaurant",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
